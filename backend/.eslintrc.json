{
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 2021,
        "sourceType": "module",
        "project": "tsconfig.json"
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:prettier/recommended"
    ],
    "env": {
        "es6": true,
        "node": true
    },
    "rules": {
        "semi": ["error", "always"],
        "comma-dangle": ["error", "only-multiline"],
        "quotes": ["error", "double"],
        "linebreak-style": ["error", "unix"]
    },
    "ignorePatterns": ["dist"]
}
